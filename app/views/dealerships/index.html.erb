<style>
.topbar {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.overall_bar {
  float: left;
}

.bar_item {
  display: block;
  padding: 8px;
  padding-right: 2em;
  background-color: #dddddd;
}
</style>
<ul class="topbar">
<li class="overall_bar"><a class="bar_item" href="/">Back To Home</a></li>
<li class="overall_bar"><a class="bar_item" href="/dealerships">Back To All Dealerships</a></li>
<li class="overall_bar"><a class="bar_item" href="/cars">Back To All Cars</a></li>
</ul>
<a style="float: right", href="/dealerships/new">New Dealership</a>
<h1 style="float: left; width: 100%">All Dealerships</h1>

<% @dealerships.each do |dealership| %>
  <h3>Dealer Name: <a href="/dealerships/<%= dealership.id %>"><%= dealership.name %></a></h3>
  <h4>Dealer City: <%= dealership.city %></h4>
  <h5>This dealership was created at: <%= dealership.created_at %>
  <% if dealership.service_department %>
    <h4>This dealership has a service department!</h4>
  <% end %>
<% end %>