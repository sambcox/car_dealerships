<%= form_with url: "/dealerships/#{@dealership.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %><br>
  <%= form.text_field :name, value: "#{@dealership.name}" %><br>
  <%= form.label :city %><br>
  <%= form.text_field :city, value: "#{@dealership.city}" %><br>
  <%= form.label :employees %><br>
  <%= form.number_field :employees, value: "#{@dealership.employees}" %><br>
  <%= form.label :service_department, "Does this dealership have a service department?" %><br>
  Yes:<%= form.radio_button :service_department, label=true, checked: @dealership.service_department %><br>
  No:<%= form.radio_button :service_department, label=false, checked:
  !@dealership.service_department %><br>
  <%= form.submit 'Update Dealership' %>
<% end %>