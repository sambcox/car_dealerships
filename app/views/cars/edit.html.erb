<%= form_with url: "/cars/#{@car.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, "Make and Model" %><br>
  <%= form.text_field :name, value: "#{@car.name}"%><br>
  <%= form.label :vin %><br>
  <%= form.text_field :vin, value: "#{@car.vin}" %><br>
  <%= form.label :color %><br>
  <%= form.text_field :color, value: "#{@car.color}" %><br>
  <%= form.label :year %><br>
  <%= form.number_field :year, value: "#{@car.year}" %><br>
  <%= form.label :mileage %><br>
  <%= form.number_field :mileage, value: "#{@car.mileage}" %><br>
  <%= form.label :available, "Is this car available?" %><br>
  Yes:<%= form.radio_button :available, label=true, checked: @car.available%><br>
  No:<%= form.radio_button :available, label=false, checked: !@car.available%><br>
  <%= form.submit 'Update Car' %>
<% end %>