<%= form_with url: "/dealerships/#{@dealership.id}/cars", method: :post, local: true do |form| %>
  <%= form.label :name, "Make and Model" %><br>
  <%= form.text_field :name %><br>
  <%= form.label :vin %><br>
  <%= form.text_field :vin %><br>
  <%= form.label :color %><br>
  <%= form.text_field :color %><br>
  <%= form.label :year %><br>
  <%= form.number_field :year %><br>
  <%= form.label :mileage %><br>
  <%= form.number_field :mileage %><br>
  <%= form.label :available, "Is this car available?" %><br>
  Yes:<%= form.radio_button :available, label=true %><br>
  No:<%= form.radio_button :available, label=false %><br>
  <%= form.submit 'Create Car' %>
<% end %>